@model IEnumerable<InvoiceManagerApp.Models.Fornecedor>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Fornecedores</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Fornecedor" asp-action="Create" class="btn btn-primary">
                Adicionar Novo Fornecedor
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome do Fornecedor
                    </th>
                    <th>
                        Vertical
                    </th>
                    <th>
                        Link para Login
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Nome</td>
                    <td width="30%">@obj.Vertical</td>
                    <td width="30%">@obj.LinkLogin</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Fornecedor" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Editar
                            </a>
                            <a asp-controller="Fornecedor" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Deletar
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não há Fornecedores para exibir.</p>
    }

</div>