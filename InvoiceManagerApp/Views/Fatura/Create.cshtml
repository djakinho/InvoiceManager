@model InvoiceManagerApp.Models.Fatura

<form method="post" asp-action="Create">

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3"> Adicionar Fatura</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DtEmissao"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DtEmissao" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DtVencimento"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DtVencimento" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Total"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Total" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ValorPago"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ValorPago" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Adicionar" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>
    </div>

</form> 