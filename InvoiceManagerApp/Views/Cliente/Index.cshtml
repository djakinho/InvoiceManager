@model IEnumerable<InvoiceManagerApp.Models.Cliente>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Clientes</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Cliente" asp-action="Create" class="btn btn-primary">
                Adicionar Novo Cliente
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome do Cliente
                    </th>
                    <th>
                        RG
                    </th>
                    <th>
                        Nome do Banco
                    </th>
                    <th>
                        Agência
                    </th>
                    <th>
                        Conta
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Nome</td>
                    <td width="30%">@obj.Rg</td>
                    <td width="30%">@obj.BancoNome</td>
                    <td width="30%">@obj.BancoAgencia</td>
                    <td width="30%">@obj.BancoConta</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Cliente" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Editar
                            </a>
                            <a asp-controller="Cliente" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Deletar
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Não há Clientes para exibir.</p>
    }

</div>