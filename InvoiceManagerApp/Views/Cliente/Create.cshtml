@model InvoiceManagerApp.Models.Cliente

<form method="post" asp-action="Create">

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3"> Adicionar Cliente</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nome"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nome" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Rg"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Rg" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BancoNome"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BancoNome" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BancoAgencia"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BancoAgencia" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BancoConta"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BancoConta" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Adicionar" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>
        </div>
    </div>

</form> 